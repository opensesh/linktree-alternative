{
  "$schema": "https://brandos.design/tokens.schema.json",
  "name": "Linktree Alternative Design Tokens",
  "version": "1.0.0",
  "description": "Design tokens for linktree-alternative template",

  "colors": {
    "brand": {
      "charcoal": {
        "value": "#191919",
        "description": "Primary text color, dark mode background"
      },
      "vanilla": {
        "value": "#FFFAEE",
        "description": "Primary background, light mode surface"
      },
      "accent": {
        "value": "#3b82f6",
        "description": "Accent color - customize for your brand"
      }
    },
    "os": {
      "bg-darker": {
        "value": "#0C0C0C",
        "description": "Deepest background level"
      },
      "bg-dark": {
        "value": "#141414",
        "description": "Primary dark background"
      },
      "surface-dark": {
        "value": "#1C1C1C",
        "description": "Elevated surface on dark backgrounds"
      },
      "border-dark": {
        "value": "#2C2C2C",
        "description": "Borders and dividers on dark backgrounds"
      },
      "text-primary-dark": {
        "value": "#E8E8E8",
        "description": "Primary text on dark backgrounds"
      },
      "text-secondary-dark": {
        "value": "#9CA3AF",
        "description": "Secondary/muted text on dark backgrounds"
      }
    },
    "semantic": {
      "background": {
        "light": "#FFFFFF",
        "dark": "#202020"
      },
      "foreground": {
        "light": "#191919",
        "dark": "#FFFFFF"
      },
      "focus": {
        "value": "#3b82f6",
        "description": "Focus ring color"
      }
    }
  },

  "typography": {
    "fontFamilies": {
      "display": {
        "value": "Inter",
        "fallback": ["system-ui", "sans-serif"],
        "description": "Primary display and heading font"
      },
      "sans": {
        "value": "Inter",
        "fallback": ["system-ui", "sans-serif"],
        "description": "Body text font"
      },
      "mono": {
        "value": "JetBrains Mono",
        "fallback": ["ui-monospace", "monospace"],
        "description": "Accent font for subheadings and special elements"
      },
      "accent": {
        "value": "Offbit",
        "fallback": ["ui-monospace", "monospace"],
        "description": "Alternative name for mono/accent usage"
      },
      "serif": {
        "value": "Georgia",
        "fallback": ["Cambria", "Times New Roman", "Times", "serif"],
        "description": "Serif fallback if needed"
      }
    },
    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "bold": 700
    },
    "fontFiles": {
      "neueHaasDisplayRoman": {
        "family": "Neue Haas Grotesk Display Pro",
        "weight": 400,
        "style": "normal",
        "file": "fonts/NeueHaasDisplayRoman.woff2"
      },
      "neueHaasDisplayMedium": {
        "family": "Neue Haas Grotesk Display Pro",
        "weight": 500,
        "style": "normal",
        "file": "fonts/NeueHaasDisplayMedium.woff2"
      },
      "neueHaasDisplayBold": {
        "family": "Neue Haas Grotesk Display Pro",
        "weight": 700,
        "style": "normal",
        "file": "fonts/NeueHaasDisplayBold.woff2"
      },
      "offbitRegular": {
        "family": "Offbit",
        "weight": 400,
        "style": "normal",
        "file": "fonts/OffBit-Regular.woff2"
      },
      "offbitBold": {
        "family": "Offbit",
        "weight": 700,
        "style": "normal",
        "file": "fonts/OffBit-Bold.woff2"
      }
    },
    "hierarchy": {
      "h1": {
        "fontFamily": "display",
        "fontWeight": 700,
        "fontSize": "2.5rem",
        "lineHeight": 1.2
      },
      "h2": {
        "fontFamily": "display",
        "fontWeight": 700,
        "fontSize": "2rem",
        "lineHeight": 1.25
      },
      "h3": {
        "fontFamily": "display",
        "fontWeight": 500,
        "fontSize": "1.5rem",
        "lineHeight": 1.3
      },
      "h4": {
        "fontFamily": "display",
        "fontWeight": 500,
        "fontSize": "1.25rem",
        "lineHeight": 1.4
      },
      "h5": {
        "fontFamily": "mono",
        "fontWeight": 400,
        "fontSize": "1rem",
        "lineHeight": 1.5,
        "note": "Max 2 instances per viewport"
      },
      "h6": {
        "fontFamily": "mono",
        "fontWeight": 400,
        "fontSize": "0.875rem",
        "lineHeight": 1.5,
        "note": "Max 2 instances per viewport"
      },
      "body": {
        "fontFamily": "sans",
        "fontWeight": 400,
        "fontSize": "1rem",
        "lineHeight": 1.7
      },
      "small": {
        "fontFamily": "sans",
        "fontWeight": 400,
        "fontSize": "0.875rem",
        "lineHeight": 1.5
      }
    }
  },

  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "default": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "brand": "12px",
    "brand-lg": "16px",
    "full": "9999px"
  },

  "shadows": {
    "brand": {
      "value": "0 2px 8px rgba(0, 0, 0, 0.1)",
      "description": "Default brand shadow"
    },
    "brand-lg": {
      "value": "0 4px 16px rgba(0, 0, 0, 0.15)",
      "description": "Large brand shadow"
    },
    "neuromorphic": {
      "default": "4px 4px 8px rgba(0, 0, 0, 0.3), -4px -4px 8px rgba(255, 255, 255, 0.02), inset 2px 2px 4px rgba(0, 0, 0, 0.2), inset -2px -2px 4px rgba(255, 255, 255, 0.01)",
      "hover": "6px 6px 12px rgba(0, 0, 0, 0.4), -6px -6px 12px rgba(255, 255, 255, 0.03), inset 1px 1px 2px rgba(0, 0, 0, 0.15), inset -1px -1px 2px rgba(255, 255, 255, 0.02)",
      "active": "2px 2px 4px rgba(0, 0, 0, 0.3), -2px -2px 4px rgba(255, 255, 255, 0.02), inset 4px 4px 8px rgba(0, 0, 0, 0.3), inset -4px -4px 8px rgba(255, 255, 255, 0.01)"
    }
  },

  "animations": {
    "blob": {
      "duration": "10s",
      "timing": "infinite",
      "keyframes": {
        "0%": { "transform": "translate(0px, 0px) scale(1)" },
        "33%": { "transform": "translate(30px, -50px) scale(1.1)" },
        "66%": { "transform": "translate(-20px, 20px) scale(0.9)" },
        "100%": { "transform": "translate(0px, 0px) scale(1)" }
      }
    },
    "cursor": {
      "duration": "0.75s",
      "timing": "step-end infinite",
      "keyframes": {
        "0%, 100%": { "opacity": "1" },
        "50%": { "opacity": "0" }
      }
    },
    "fadeIn": {
      "duration": "0.2s",
      "timing": "ease-in-out forwards",
      "keyframes": {
        "from": { "opacity": "0", "transform": "translateY(-8px)" },
        "to": { "opacity": "1", "transform": "translateY(0)" }
      }
    },
    "slideInRight": {
      "duration": "0.2s",
      "timing": "ease-out forwards",
      "keyframes": {
        "from": { "transform": "translateX(100%)" },
        "to": { "transform": "translateX(0)" }
      }
    },
    "slideOutRight": {
      "duration": "0.2s",
      "timing": "ease-in forwards",
      "keyframes": {
        "from": { "transform": "translateX(0)" },
        "to": { "transform": "translateX(100%)" }
      }
    }
  },

  "transitions": {
    "default": {
      "property": "colors",
      "duration": "200ms",
      "timing": "ease"
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "accessibility": {
    "minTouchTarget": "44px",
    "focusRingWidth": "2px",
    "focusRingOffset": "2px",
    "focusRingColor": "#3b82f6"
  }
}
